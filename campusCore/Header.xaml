<UserControl x:Class="campusCore.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:campusCore"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="white" Height="60" 
      VerticalAlignment="Top" >
        <Image Source="pack://application:,,,/Img/Logo.png"
               Width="80" Height="60"
               Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" />
        <Button x:Name="Logout" Content="로그아웃" HorizontalAlignment="Right" Margin="-4,0,20,0" Cursor="Hand" Background="Transparent" HorizontalContentAlignment="Center" FontWeight="Bold" FontFamily="Arial Black" Click="Logout_Click"/>
    </Grid>
</UserControl>
