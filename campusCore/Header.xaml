<UserControl x:Class="campusCore.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:campusCore"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid Background="white" Height="60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="logo" Source="pack://application:,,,/Img/Logo.png"
               Width="80" Height="60"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               Grid.Column="0"/>

        <Button Content="로그아웃"
                Grid.Column="2"
                Margin="0,5,20,37"
                Background="{x:Null}"
                Cursor="Hand"
                FontWeight="Bold" BorderBrush="{x:Null}" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</UserControl>
