<UserControl x:Class="campusCore.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:campusCore"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <StackPanel Width="200" 
          HorizontalAlignment="Left" Height="740" VerticalAlignment="Bottom" Background="Gray" >
        <TextBlock Text="학적"
                   VerticalAlignment="Top"
                   Margin="20 20"
                   FontSize="20"
                   Foreground="Gray"/>
        <Grid Height="200">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="학생정보조회" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="25" Cursor="Hand"/>


        </Grid>
    </StackPanel>
</UserControl>
