<Window x:Class="campusCore.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:campusCore"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="로그인" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>
        <TextBox x:Name="txtId"  Margin="0 0 0 10" Text="학번" Cursor="Hand"/>
        <PasswordBox x:Name="txtPw" Margin="0 0 0 10" Cursor="Hand"/>
        <Button Content="로그인" Click="Button_Click" />
    </StackPanel>

</Window>
