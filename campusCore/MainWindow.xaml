<Window x:Class="campusCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:campusCore"
        xmlns:controls="clr-namespace:campusCore"
        mc:Ignorable="d"
        Title="CampusCore" Height="800" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <controls:Header Grid.Row="0" />

        <!-- 내용 -->
        <Grid Grid.Row="1" Background="#F8F9FC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- 컨텐츠 영역 -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <controls:Sidebar Grid.Column="0"/>

            <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="20,0,0,0">
                <Frame.Content>
                    <!-- 초기 화면: 기존 캘린더 그리드 -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="TitleText" Text="2025년 12월" FontSize="28" FontWeight="Bold" Margin="0 0 0 20" />

                        <Grid x:Name="CalendarGrid" Grid.Row="1" Background="White" Margin="0"/>
                    </Grid>
                </Frame.Content>
            </Frame>
        </Grid>
    </Grid>
</Window>