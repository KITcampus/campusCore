<Page x:Class="campusCore.StuInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:campusCore"
      xmlns:controls="clr-namespace:campusCore"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1350"
      Title="StuInfo" Background="#F8F9FC">
    <Border BorderBrush="Black"
        BorderThickness="1"
        CornerRadius="3"
        Padding="10"
        Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <TextBlock Text="학적조회" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- 상단 학적 정보 그리드 -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- 첫번째 행 -->
                    <TextBlock Text="학번/성명" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1"/>
                    <TextBlock Text="학과" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="3"/>
                    <TextBlock Text="입학구분/입학일"  Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="5"/>

                    <!-- 두번째 행 -->
                    <TextBlock Text="과정/학년/반" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1"/>
                    <TextBlock Text="전공" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="3"/>
                    <TextBlock Text="연락처"  Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1" Grid.Column="5"/>

                    <!-- 세번째 행 -->
                    <TextBlock Text="학적상태/주민번호" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1"/>
                    <TextBlock Text="지도교수" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="2" Grid.Column="3"/>
                    <TextBlock Text="고교명"  Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="2" Grid.Column="5"/>

                    <!-- 네번째 행 -->
                    <TextBlock Text="최종변동" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="3" Grid.Column="1"/>
                    <TextBlock Text="주소" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4"/>
                </Grid>

                <!-- 학생정보 섹션 -->
                <StackPanel>
                    <TextBlock Text="● 학생정보" FontWeight="Bold" Margin="0,10,0,5"/>

                    <TabControl>
                        <TabItem Header="개인정보">
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="100"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="영문성명" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1"/>
                                <TextBlock Text="졸업일자" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="0" Grid.Column="3"/>

                                <TextBlock Text="휴대폰" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1"/>
                                <TextBlock Text="전화번호" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="1" Grid.Column="3"/>

                                <TextBlock Text="비상연락망1" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="2" Grid.Column="1"/>
                                <TextBlock Text="비상연락망2" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="2" Grid.Column="3"/>

                                <TextBlock Text="비상연락망3" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="3" Grid.Column="1"/>
                                <TextBlock Text="비상연락망4" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="3" Grid.Column="3"/>

                                <TextBlock Text="이메일" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"/>
                            </Grid>
                        </TabItem>

                        <TabItem Header="학적변동">
                            <Grid Margin="0,5,0,0">
                                <!-- 학적변동 내용 -->
                            </Grid>
                        </TabItem>
                    </TabControl>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
