<Page x:Class="campusCore.StuInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:campusCore"
      xmlns:controls="clr-namespace:campusCore"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1350"
      Title="StuInfo" Background="#F8F9FC">

    <Grid>
        <StackPanel Margin="0,0,0,0">
            <TextBlock Text="학생정보조회" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

            <Grid Background="White" Height="640">
                <Grid Margin="20,20">
                    <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column" SelectionChanged="DataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="학생 이름" Binding="{Binding Name}" Width="*" FontSize="20"/>
                            <DataGridTextColumn Header="학번" Binding="{Binding StudentID}" Width="*" FontSize="20"/>
                            <DataGridTextColumn Header="전공" Binding="{Binding Major}" Width="*" FontSize="20"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
